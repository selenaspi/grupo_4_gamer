<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/styleindex.css">
</head>

<body>

    <%- include('../partials/header') %>

    <!------------------------- BANNER  ------------------------->

    <aside class="banner">
        <img src="/images/pexels-soumil-kumar-735911.jpg" alt="banner">
    </aside>

    <!-- ICONOS POR DEBAJO DE BANNER -->

    <section class="categorias">

        <div class="icon1" alt="PC Armadas">
            <i class="fa-solid fa-computer"></i>
        </div>

        <div class="icon2" alt="Impresoras">
            <i class="fa-solid fa-print"></i>
        </div>
        <div class="icon3" alt="Accesorios">
            <i class="fa-solid fa-headphones-simple"></i>
        </div>
        <div class="icon4" alt="Conexiones">
            <i class="fa-solid fa-wifi"></i>
        </div>
        <div class="icon5" alt="Hardware">
            <i class="fa-solid fa-laptop-code"></i>
        </div>
        <div class="icon6" alt="OtraCosa">
            <i class="fa-solid fa-laptop-code"></i>
        </div>
        
    </section>


    <!-- ICONO FIXED -->

    <div class="shoppingCarF">
        <i class="fa-solid fa-cart-shopping"></i>
    </div>

    <main>

        <section class="ofertas">

            <h2><a href="#">Ofertas</a></h2>

            <div class="productos">

                <% for(let i=0; i < productosOfertas.length; i++) { %>

                    <article>

                        <img src="<%= productosOfertas[i].image%>" alt="primer producto">
                        
                        <button id="favOff"><span class="material-icons-outlined">favorite_border</span></button>
                        <!-- <button id="favOn"><span class="material-icons">favorite</span></button> -->
                        
                        <div class="main-article">

                            <p class="name"><%= productosOfertas[i].name.length <40? productosOfertas[i].name.toUpperCase()  : (productosOfertas[i].name.substring(0, 28)).toUpperCase() + "..." %></p>

                            <p class="precio-antes">$<%= productosOfertas[i].price %></p>

                            <div>
                                <p class="precio">$<%= productosOfertas[i].price - ((productosOfertas[i].price*productosOfertas[i].discount)/100) %></p>
                                <p class="descuento"><%= productosOfertas[i].discount %>% OFF</p>
                            </div>

                        </div>

                    </article>

                <% } %>

            </div>

        </section>

        <section class="recomendado">

            <h2><a href="#">Recomendados</a></h2>

            <div class="productos">

                <% for(let i=0; i < productsRecomendados.length; i++) { %>

                    <article>

                        <img src="<%= productsRecomendados[i].image%>" alt="primer producto">
                        
                        <button id="favOff"><span class="material-icons-outlined">favorite_border</span></button>
                        <!-- <button id="favOn"><span class="material-icons">favorite</span></button> -->
                        
                        <div class="main-article">
                                
                            <p class="name"><%= productsRecomendados[i].name.length <40? productsRecomendados[i].name.toUpperCase()  : (productsRecomendados[i].name.substring(0, 28)).toUpperCase() + "..." %></p>

                            <% if(productsRecomendados[i].discount !== 0) {%>
                                <p class="precio-antes">$<%= productsRecomendados[i].price %></p>
                                <div>
                                    <p class="precio">$<%= productsRecomendados[i].price - ((productsRecomendados[i].price*productsRecomendados[i].discount)/100) %></p>
                                    <p class="descuento"><%= productsRecomendados[i].discount %>% OFF</p>
                                </div>
                            <%} else {%>
                                <div>
                                    <p class="precio">$<%= productsRecomendados[i].price%></p>
                                </div>
                            <%}%>

                        </div>
                    
                    </article>

                <% } %>

            </div>
        </section>
        
    </main>

    <%- include('../partials/footer') %>

</body>

</html>